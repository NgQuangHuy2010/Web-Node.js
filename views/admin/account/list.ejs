<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Document</title>
  </head>
  <body>
    <div class="content">
      <div class="container">
        <div class="page-title">
          <h3>
            User Roles
            <a
              href="/admin/add-account"
              class="btn btn-sm btn-outline-primary float-end"
              ><i class="fas fa-plus-circle"></i> Add</a
            >
          </h3>
        </div>
        <div class="box box-primary">
          <div class="box-body">
            <table
              width="100%"
              class="table table-hover"
              id="dataTables-example"
            >
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Name</th>
                  <th>Phone</th>
                  <th>Email</th>
              
                </tr>
              </thead>
              <tbody>
                <% for(var i=0;i< listData.length;i++){ %>
                <tr>
                  <th scope="row"><%- listData[i].id %></th>
                  <td><%- listData[i].name %></td>
                  <td><%- listData[i].phone %></td>
                  <td><%- listData[i].email %></td>

                  <!-- <td><%- listData[i].desc %></td>
                  <td><%- listData[i].status %></td> -->
                  <td class="text-end">
                    <a href=" " class="btn btn-outline-secondary btn-rounded"
                      ><i class="fas fa-toggle-on"></i
                    ></a>
                    <a
                      href="edit-account/<%- listData[i].id %>"
                      class="btn btn-outline-info btn-rounded"
                      ><i class="fas fa-pen"></i
                    ></a>
                    <a
                      href="delete-account/<%- listData[i].id %>"
                      class="btn btn-outline-danger btn-rounded"
                      ><i class="fas fa-trash"></i
                    ></a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
